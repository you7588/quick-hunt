<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
    <h2><sapn class="fa fa-user-circle-o"></sapn>
      <%=  t('dv_signup')%>
    </h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => false, placeholder: t('dv_check_email'), error: t('dv_warn_email'), required: true, autofocus: true %>
        <%= f.input :name, :label => false, placeholder: t('dv_real_name'), error: t('dv_warn_real_name'), required: true %>
        <%= f.input :is_admin, :label => false, as: :radio_buttons, collection:  [[t('dv_user'), false], [t('dv_admin'), true]], required: true %>
        <%= f.input :password, :label => false, placeholder: t('dv_pwd'), error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 } %>
        <%= f.input :password_confirmation, :label => false, placeholder: t('dv_comfirm_pwd'), error: '请输入相同的密码', required: true, input_html: { maxlength: 16 } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, t('dv_signup'),class: "button" %>
      </div>
    <% end %>
    <hr />
      <div class="account">
        <%= link_to t('dv_account_signin'), new_session_path(resource_name) %><br />
      </div>
    </div>
  </div>
</div>
